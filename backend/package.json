{
  "name": "facebook-clone-backend",
  "version": "0.0.1",
  "description": "Setup project with typeorm express eslint docker and postgres",
  "type": "commonjs",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon",
    "lint-fix": "eslint --fix --ignore-path .gitignore --ext .ts src/",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "crt:entity": "cross-var npx typeorm entity:create src/entity/$npm_config_name",
    "run:migration": "npx typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "gen:migration": "cross-var npx typeorm-ts-node-commonjs migration:generate src/migration/$npm_config_name -p -d src/data-source.ts && npm run run:migration",
    "rev:migration": "npx typeorm-ts-node-commonjs migration:revert -d src/data-source.ts",
    "show:migration": "npx typeorm-ts-node-commonjs migration:show -d src/data-source.ts",
    "drop:tables": "npx typeorm-ts-node-commonjs schema:drop -d src/data-source.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.0.1",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "typeorm": "0.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "4.5.2"
  },
  "_moduleAliases": {
    "@": "./build"
  }
}
